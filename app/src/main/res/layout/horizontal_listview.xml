<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="95dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lineaylayout_addfriend_can_know"
        android:layout_width="95dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageview_can_know_close"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="right"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp" />

        <ImageView
            android:id="@+id/imageview_can_know_icon"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cqd_contact_icon_portrait_default" />

        <TextView
            android:id="@+id/imageview_can_know_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="张三三"
            android:textColor="@color/text_color_33gray"
            android:textSize="@dimen/text_size_middle_s" />

        <TextView
            android:id="@+id/imageview_can_know_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="1位共同好友"
            android:textColor="@color/text_color_66gray"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/imageview_can_know_add"
            android:layout_width="55dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/backgroud_bg_button"
            android:gravity="center"
            android:text="添加"
            android:textColor="@drawable/text_selector_gray_white"
            android:textSize="@dimen/text_size_middle_s" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/text_color_white" />
    </LinearLayout>
</LinearLayout>