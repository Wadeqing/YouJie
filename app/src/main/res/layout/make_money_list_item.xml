<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineaylayout_item"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/text_color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_icon"
        android:layout_width="94dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_text_title"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            android:text="我是文章标题煞风景滑动时间发哈时间的话骄傲的是"
            android:textColor="@color/text_color_33gray"
            android:textSize="@dimen/text_size_middle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_newssource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来源"
                android:visibility="gone"
                android:textColor="@color/text_color_99gray"
                android:textSize="@dimen/text_size_small" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textview_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/cqd_articles_browse"
                android:drawablePadding="5dp"
                android:text="999+"
                android:textColor="@color/text_color_99gray"
                android:textSize="@dimen/text_size_middle" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>