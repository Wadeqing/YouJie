<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_notarization_file_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_notarization_file_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="证书类型：电子借条公证文件" />

        <TextView
            android:id="@+id/textview_notarization_file_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="申请时间：2017/11/11" />

        <TextView
            android:id="@+id/textview_notarization_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="录音文件：电子借条公证文件" />
        <Button
            android:id="@+id/button_listview_natarization_detail"
            android:text="查看详情"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/buttom_bg_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>