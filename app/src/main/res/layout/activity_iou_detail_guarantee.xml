<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:id="@+id/srcollview_guarantee_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroud_gray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color_white"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview_guarantee_launch_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/cqd_contact_icon_portrait_default" />

                    <TextView
                        android:id="@+id/textview_launch_name_guaranteee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="发起人"
                        android:textColor="@color/text_color_33gray"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/textview_status_finish_guarantee"
                        android:layout_width="72dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/red_btn_bg"
                        android:gravity="center"
                        android:text="家具装修"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_middle_s" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textview_public_detail_explain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/text_color_33gray"
                    android:textSize="15sp" />

                <GridView
                    android:id="@+id/gridView_create_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:horizontalSpacing="3dp"
                    android:numColumns="3"
                    android:verticalSpacing="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="担保项目"
                android:textColor="@color/text_color_33gray"
                android:textSize="@dimen/text_size_middle_s" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_color_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_borrow_money"
                            style="@style/IOUValueStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="担保金额(元)"
                            android:textColor="@color/text_color_66gray"
                            android:textSize="@dimen/text_size_small_s" />

                        <TextView
                            android:id="@+id/textview_guarantee_detail_amount"
                            style="@style/IOUValueRedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:gravity="bottom"
                            android:text="10000  元"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/line_gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/IOUValueStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="担保收益（%）"
                            android:textColor="@color/text_color_66gray"
                            android:textSize="@dimen/text_size_small_s" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textview_guarantee_lucre"
                                style="@style/IOUValueRedStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12.00"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/IOUValueRedStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="3dp"
                                android:gravity="bottom"
                                android:text="%"
                                android:textSize="@dimen/text_size_big"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_color_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/IOUValueStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="借款日期"
                            android:textColor="@color/text_color_66gray"
                            android:textSize="@dimen/text_size_small_s" />

                        <TextView
                            android:id="@+id/textview_guarantee_detail_create_time"
                            style="@style/IOUValueRedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:gravity="bottom"
                            android:text="10000  元"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/line_gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/IOUValueStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="还款日期"
                            android:textColor="@color/text_color_66gray"
                            android:textSize="@dimen/text_size_small_s" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textview_guarantee_end_time"
                                style="@style/IOUValueRedStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12.00"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_white"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/IOUValueRedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="信用服务"
                    android:textColor="@color/text_color_33gray"
                    android:textSize="@dimen/text_size_middle_s" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textview_zx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/cqd_borrowing_details_icon_credit"
                        android:gravity="center"
                        android:text="征信报告"
                        android:textColor="@color/text_color_33gray"
                        android:textSize="@dimen/text_size_middle_s" />

                    <TextView
                        android:id="@+id/textview_iou"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/cqd_borrowing_details_icon_ious"
                        android:gravity="center"
                        android:text="担保协议"
                        android:textColor="@color/text_color_33gray"
                        android:textSize="@dimen/text_size_middle_s" />

                    <TextView
                        android:id="@+id/textView_friend_guarantee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="6dp"
                        android:drawableTop="@drawable/cqd_borrowing_details_icon_guarantee"
                        android:gravity="center"
                        android:text="共同担保"
                        android:textColor="@color/text_color_33gray"
                        android:textSize="@dimen/text_size_middle_s"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textview_common_friend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/cqd_borrowing_details_icon_mutualfriend"
                        android:gravity="center"
                        android:text="共同好友"
                        android:textColor="@color/text_color_33gray"
                        android:textSize="@dimen/text_size_middle_s" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_gray" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color_white"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <TextView
                        style="@style/IOUValueRedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/text_color_white"
                        android:text="我的担保"
                        android:textColor="@color/text_color_33gray" />

                    <TextView
                        android:id="@+id/textview_detail_guarantee"
                        style="@style/IOUValueStyle"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/backgroud_bg_white_corner"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="未担保"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_middle_s" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@color/text_color_white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:padding="5dp">

                    <TextView
                        style="@style/IOUValueStyle"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:text="    我的收益：" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textview_me_guarantee_lucre"
                        style="@style/IOUValueRedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="¥100" />

                    <CheckBox
                        android:id="@+id/checkbox_guarantee"
                        style="@style/MyCheckBox"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="3dp"
                        android:checked="false"
                        android:paddingLeft="1dp" />


                    <LinearLayout
                        android:id="@+id/lineaylayout_text_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_text_check"
                            style="@style/IOUValueRedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="免收益担保" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lineaylayout_launch_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="right|center_vertical"
                        android:text="发起人签名："
                        android:textColor="@color/text_color_33gray"
                        android:textSize="@dimen/text_size_big" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/imageview_detail_launch_sign"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:background="@color/text_color_white"
                        android:scaleType="fitStart"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lineaylayout_inverst_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="right|center_vertical"
                        android:text="投资人签名："
                        android:textColor="@color/text_color_33gray"
                        android:textSize="@dimen/text_size_big" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/imageview_detail_inverst_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:background="@color/text_color_white"
                        android:scaleType="fitStart"
                        android:visibility="visible" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lineaylayout_guarntee_detail_guarntee_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:visibility="visible">

                    <TextView
                        style="@style/IOUValueStyle"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="right|center_vertical"
                        android:text="担保人签名："
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/textview_click_sign_guarantee"
                        style="@style/IOUValueStyle"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="60dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="点击签名"
                        android:textColor="@color/text_color_white"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/imageview_sing_guarantee"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:background="@color/text_color_white"
                        android:scaleType="fitStart"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linearlayout_guarantee_iou_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_cancle_guarantee"
                        style="@style/IOUValueRedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="再考虑下"
                        android:textColor="@color/text_color_66gray" />

                    <View
                        android:layout_width="55dp"
                        android:layout_height="1dp"
                        android:background="@color/text_color_66gray" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textview_agree_guraantee"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/backgroud_bg_red_corner"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="同意担保"
                    android:textColor="@color/text_color_white" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_sure_guratee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/backgroud_bg_red_corner"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认担保还款"
            android:textColor="@color/text_color_white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textview_finish_guaretee"
            style="@style/IOUValueStyle"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/backgroud_bg_red_corner"
            android:gravity="center"
            android:text="已担保"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>