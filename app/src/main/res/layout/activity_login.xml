<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="@color/colorPrimaryDark"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:src="@drawable/cqd_contact_icon_back" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cqd_login_icon_logo"
                android:transitionName="login_share" />

            <LinearLayout
                style="@style/register_linear"
                android:layout_marginTop="35dp">

                <TextView
                    style="@style/register_text"
                    android:layout_weight="0.6"
                    android:text="手机号" />

                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.4"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:hint="@string/phone_hint"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColorHint="@color/text_color_99gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color_eegray" />

            <LinearLayout style="@style/register_linear">

                <TextView
                    style="@style/register_text"
                    android:layout_weight="0.6"
                    android:text="密码" />

                <EditText
                    android:id="@+id/password_text"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2.4"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:hint="@string/register_password_check"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:textColorHint="@color/text_color_99gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color_eegray" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_backgroud_selector"
                android:enabled="false"
                android:text="@string/login_btn"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/forgetpassword_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="忘记密码？"
                    android:textColor="@color/text_color_99gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/register_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="快速注册"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_middle_s"
                android:text="国内领先熟人借贷服务平台"
                android:textColor="@color/text_color_66gray" />
            <TextView
                android:id="@+id/textview_youjay_cellphone"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/text_size_middle_s"
                android:textColor="@color/text_color_66gray" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>