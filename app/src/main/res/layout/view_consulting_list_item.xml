<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.youjie.android.view.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/textview_content_comment"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="25dp"
                android:maxLines="4"
                android:textColor="@color/text_color_33gray"
                android:textSize="@dimen/text_size_super_big" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="2017-04-15  16:43:23"
                    android:textColor="@color/text_color_66gray"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textview_money"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/cqd_counseling_icon_money"
                    android:drawablePadding="8dp"
                    android:gravity="right"
                    android:text="38.00"
                    android:textColor="@color/text_color_33gray"
                    android:textSize="@dimen/text_size_middle_s" />

                <ImageView
                    android:id="@+id/textview_discuss"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/cqd_counseling_icon_comments"
                    android:text="评价"
                    android:textSize="@dimen/text_size_super_big" />
            </LinearLayout>

            <View
                android:id="@+id/view_devide"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/text_color_ccgray" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_delete_consulting"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_super_big" />
    </com.youjie.android.view.SwipeLayout>
</LinearLayout>