<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_tar_heigh"
        android:background="@color/color00"
        android:visibility="visible" />
    <!--<include layout="@layout/view_title" />-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.youjie.android.view.VpSwipeRefreshLayout
            android:id="@+id/swiperefreshlayout_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:id="@+id/scrollview_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:visibility="visible">

                        <com.tmall.ultraviewpager.UltraViewPager
                            android:id="@+id/viewpager_main"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />

                        <LinearLayout
                            android:id="@+id/linearlayout_main_poit_show"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:orientation="horizontal" />

                        <ImageView
                            android:id="@+id/imageview_title_right"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_gravity="end"
                            android:layout_marginRight="18dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/cqd_home_icon_message" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/text_color_white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="2">

                            <LinearLayout
                                android:id="@+id/linearlayout_home_friend2money"
                                android:layout_width="0dp"
                                android:layout_height="90dp"
                                android:layout_weight="1"
                                android:background="@color/text_color_white"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageview_home_friend2money"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:scaleType="fitXY" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearlayout_home_quick_borrow_money"
                                android:layout_width="0dp"
                                android:layout_height="90dp"
                                android:layout_weight="1"
                                android:background="@color/text_color_white"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageview_home_quick_borrow_money"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:scaleType="fitXY" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/text_color_white"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/textview_turnover_0"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/text_color_white"
                            android:gravity="center"
                            android:scaleType="fitXY" />
                        android:src="@drawable/cqd_home_img_yjzz"

                        <ImageView
                            android:id="@+id/textview_turnover_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@color/text_color_white"
                            android:gravity="center"
                            android:scaleType="fitXY" />
                        android:src="@drawable/cqd_home_img_grxf"

                        <ImageView
                            android:id="@+id/textview_turnover_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/text_color_white"
                            android:gravity="center"
                            android:scaleType="fitXY" />
                        android:src="@drawable/cqd_home_img_cycz"
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearlayout_home_purposes2"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="3"
                        android:background="@color/text_color_white"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/textview_turnover_3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/text_color_white"
                            android:gravity="center"
                            android:scaleType="fitXY" />
                        android:src="@drawable/cqd_home_img_jyzx"

                        <ImageView
                            android:id="@+id/textview_turnover_4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@color/text_color_white"
                            android:gravity="center"
                            android:scaleType="fitXY" />
                        android:src="@drawable/cqd_home_img_jjzx"

                        <ImageView
                            android:id="@+id/textview_turnover_5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/text_color_white"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:text="旅游出行" />
                        <!--android:src="@drawable/cqd_home_img_lycx"-->
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/text_color_eegray" />

                    <LinearLayout
                        android:id="@+id/lineaylaout_loanServicePrograms"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@android:color/white"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="15dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/lineaylayout_home_ioumanage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="37dp"
                                android:layout_height="35dp"
                                android:src="@drawable/cqd_home_icon_manage" />

                            <TextView
                                android:id="@+id/textview_home_ioumanage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="借贷管理"
                                android:textColor="@color/text_color_99gray"
                                android:textSize="@dimen/text_size_middle_s" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lineaylayout_home_iou_strategy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="37dp"
                                android:layout_height="35dp"
                                android:src="@drawable/cqd_home_icon_strategy" />

                            <TextView
                                android:id="@+id/textview_home_iou_strategy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="借贷攻略"
                                android:textColor="@color/text_color_99gray"
                                android:textSize="@dimen/text_size_middle_s" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lineaylayout_lawyer_consult"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="37dp"
                                android:layout_height="35dp"
                                android:src="@drawable/cqd_home_icon_lawyer" />

                            <TextView
                                android:id="@+id/textView2_lawyer_consult"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="律师咨询"
                                android:textColor="@color/text_color_99gray"
                                android:textSize="@dimen/text_size_middle_s" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lineaylayout_home_phone_tape"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="37dp"
                                android:layout_height="35dp"
                                android:src="@drawable/cqd_home_icon_recording" />

                            <TextView
                                android:id="@+id/textview_home_phone_tape"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="电话录音"
                                android:textColor="@color/text_color_99gray"
                                android:textSize="@dimen/text_size_middle_s" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lineaylayout_law_tool"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="37dp"
                                android:layout_height="35dp"
                                android:src="@drawable/cqd_home_icon_legal" />

                            <TextView
                                android:id="@+id/textView4_law_tool"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="法律工具"
                                android:textColor="@color/text_color_99gray"
                                android:textSize="@dimen/text_size_middle_s" />
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/text_color_eegray" />

                    <LinearLayout
                        android:id="@+id/listview_home_friend_header"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="15dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="好友发起的投资"
                            android:textColor="@color/text_color_33gray" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/textview_home_lock_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:drawablePadding="3dp"
                            android:drawableRight="@drawable/cqd_contact_icon_right_gray"
                            android:text="查看更多"
                            android:textColor="@color/text_color_66gray"
                            android:textSize="@dimen/text_size_middle" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textview_no_friend_borrow"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:background="@color/text_color_white"
                        android:gravity="center"
                        android:text="您关注的好友暂未发布借款"
                        android:textColor="@color/text_color_33gray"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_color_eegray" />

                    <ListView
                        android:id="@+id/listview_home_friend_invest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:divider="@color/text_color_white"
                        android:dividerHeight="10dp">

                    </ListView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@color/text_color_f5gray"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            android:drawableTop="@drawable/cqd_home_icon_riskcontrol"

                            android:gravity="center"
                            android:text="风控系统\n资金安全有保障"
                            android:textColor="@color/text_color_99gray"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            android:drawableTop="@drawable/cqd_home_icon_connect"
                            android:gravity="center"
                            android:text="证据保全\n区域链技术防篡改"
                            android:textColor="@color/text_color_99gray"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            android:drawableTop="@drawable/cqd_home_icon_lock"
                            android:gravity="center"
                            android:text="安全借贷\n金融级别平台"
                            android:textColor="@color/text_color_99gray"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            android:drawableTop="@drawable/cqd_home_icon_friend"
                            android:gravity="center"
                            android:text="深度人脉\n全方位关系追踪"
                            android:textColor="@color/text_color_99gray"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </com.youjie.android.view.VpSwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/linearylaout_no_internet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text_color_fb"
            android:clickable="false"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="62dp"
                android:layout_height="92dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/cqd_defaultpage_icon_withoutinternet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:text="网络连接失败"
                android:textColor="@color/text_color_99gray"
                android:textSize="@dimen/text_size_big" />

            <Button
                android:id="@+id/textview_connection_internet"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/backgroud_bg_gray_corner_2dp"
                android:gravity="center"
                android:text="点击重试"
                android:textColor="@color/text_color_99gray"
                android:textSize="15sp" />
        </LinearLayout>


    </FrameLayout>


</LinearLayout>