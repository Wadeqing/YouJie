<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.youjie.android.pulltorefresh.PullToRefreshListView
            android:id="@+id/pulltorefreshlist_tape_file"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/linearlayour_tape_noarization_list_null"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@color/bg_iou_detail_gray"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="80dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/icon_record_without" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无记录"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_size_big" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>