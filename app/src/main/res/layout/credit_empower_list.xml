<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lineaylayout_click_friend_detail"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="1dp"
        android:background="@color/text_color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageview_credit_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/cqd_contact_icon_portrait_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_credit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="呵呵哒"
                    android:textColor="@color/text_color_33gray"
                    android:textSize="@dimen/text_size_middle_s" />

                <TextView
                    android:id="@+id/textview_credit_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="2017/8/22"
                    android:textColor="@color/text_color_99gray"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <TextView
                android:id="@+id/textview_credit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="希望查看您的征信报告"
                android:textColor="@color/text_color_33gray"
                android:textSize="@dimen/text_size_middle_s" />

        </LinearLayout>

        <TextView
            android:id="@+id/textview_credit_denied"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/backgroud_bg_white_gray_selector"
            android:gravity="center"
            android:text="忽略"
            android:textColor="@color/text_color_99gray"
            android:textSize="@dimen/text_size_middle_s" />

        <TextView
            android:id="@+id/textview_credit_agree"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/backgound_button_blue_shape"
            android:gravity="center"
            android:text="授权"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_middle_s" />
    </LinearLayout>

</LinearLayout>