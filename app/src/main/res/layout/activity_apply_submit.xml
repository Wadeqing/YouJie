<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="      证书将以邮寄的方式有办理公证处寄出至申请人请仔细填写下方收件人联系方式，确保邮寄顺利到达"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/text_size_middle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收件人姓名:"
                android:textSize="@dimen/text_size_big" />

            <EditText
                android:id="@+id/edittext_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttom_bg_shape"
                android:padding="3dp" />

            <TextView
                android:id="@+id/textview_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="联系电话:"
                android:textSize="@dimen/text_size_big" />

            <EditText
                android:id="@+id/edittext_phone_num"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttom_bg_shape"
                android:inputType="numberSigned"
                android:padding="3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="详细地址:"
                android:textSize="@dimen/text_size_big" />

            <EditText
                android:id="@+id/edittext_detailed_address"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttom_bg_shape"
                android:gravity="top"
                android:padding="3dp" />

            <TextView
                android:id="@+id/textview_address_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/bg_red"
                android:gravity="center"
                android:padding="5dp"
                android:text="下一步"
                android:textSize="@dimen/text_size_super_big" />
        </LinearLayout>
        <View
            android:id="@+id/view_parent"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</LinearLayout>