<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="1dp"
    android:background="@color/text_color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/imageview_friend"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/cqd_contact_icon_portrait_default" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友请求:宋启平"
            android:textColor="@color/text_color_33gray"
            android:textSize="@dimen/text_size_middle_s" />

        <TextView
            android:id="@+id/textview_common_friend_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="手机号:13888888888"
            android:textColor="@color/text_color_33gray"
            android:textSize="@dimen/text_size_middle_s" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_recycler"
        style="@style/MyChooseCheckBox"
        android:layout_width="25dp"
        android:layout_height="60dp"
        android:checked="true"
        android:padding="20dp"
        android:paddingRight="5dp" />

</LinearLayout>