<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_centrality_bg"
        android:background="@drawable/cqd_personal_usercenter_bg"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearlayout_view_title_back"
            android:layout_width="50dp"
            android:layout_height="@dimen/actionBar"
            android:layout_gravity="center|left"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingTop="@dimen/status_tar_heigh"
            android:visibility="visible">
            <ImageView
                android:id="@+id/imageview_title_left"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:src="@drawable/cqd_borrowing_icon_back"
                android:visibility="visible" />
            <TextView
                android:id="@+id/textview_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text_color_33gray"
                android:textSize="@dimen/text_size_middle_s"
                android:visibility="gone" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="申请认证流程"
            android:textColor="@color/text_color_white"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="简单      快速      省心      安全"
            android:textColor="@color/text_color_white" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="完善认证资料，绑定银行卡借贷立享快捷服务"
            android:textColor="@color/text_color_white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color_white"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/cqd_personal_usercenter_rectangle"
                android:drawablePadding="5dp"
                android:gravity="left"
                android:text="想要借贷更简单"
                android:textColor="@color/text_color_33gray"
                android:textSize="@dimen/text_size_middle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_real_name_authentication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="110dp"
                    android:drawablePadding="8dp"
                    android:drawableTop="@drawable/cqd_personal_usercenter_icon_realname"
                    android:text="实名认证"
                    android:textColor="@color/text_color_33gray"
                    android:textSize="@dimen/text_size_middle_s" />

                <TextView
                    android:id="@+id/textview_credit_empower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableTop="@drawable/cqd_personal_usercenter_icon_credit"
                    android:text="征信授权"
                    android:textColor="@color/text_color_33gray"
                    android:textSize="@dimen/text_size_middle_s" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>