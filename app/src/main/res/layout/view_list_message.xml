<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/text_color_eegray" />

    <com.youjie.android.view.SwipeLayout
        android:id="@+id/swipelayout_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@drawable/backgroud_bg_white_corner_5dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/linearlayout_list_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/imageview_user_message_icon"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/cqd_contact_icon_portrait_default"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_user_message_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:maxLines="1"
                            android:text="系统消息"
                            android:textColor="@color/text_color_33gray"
                            android:textSize="@dimen/text_size_big" />

                        <TextView
                            android:id="@+id/textview_user_message_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:text="您的借条已逾期，请注意收款"
                            android:textColor="@color/text_color_99gray"
                            android:textSize="@dimen/text_size_middle_s" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:background="@color/text_color_eegray" />

                <TextView
                    android:id="@+id/textview_user_message_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="10dp"
                    android:textColor="@color/text_color_99gray"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/view_message_devide"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:background="@color/text_color_eegray" />

                <TextView
                    android:id="@+id/textview_message_list_lock_detail"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:paddingTop="8dp"
                    android:text="查看详情"
                    android:textColor="@color/text_color_99gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkbox_message"
                style="@style/MyChooseCheckBox"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:checked="false"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_delete_message"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_super_big"
            android:visibility="gone" />
    </com.youjie.android.view.SwipeLayout>
</LinearLayout>