<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineaylayout_business_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/textview_business_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textColor="@color/text_color_33gray"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/textview_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="余额：2000.00"
            android:textColor="@color/text_color_33gray"
            android:textSize="@dimen/text_size_middle" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/textview_balance_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/07/30"
            android:textColor="@color/text_color_99gray"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/textview_balance_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:text="+2000.00"
            android:textColor="@color/text_color_33gray"
            android:textSize="@dimen/text_size_middle" />
    </LinearLayout>
</LinearLayout>