<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineaylayout_apply_friend_listview"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="1dp"
    android:background="@color/text_color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/imageview_addfriend_icon_one_listview"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/cqd_contact_icon_portrait_default" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_addfriend_name_one_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友请求:宋启平"
            android:textColor="@color/text_color_33gray"
            android:textSize="@dimen/text_size_middle_s" />

        <TextView
            android:id="@+id/textview_addfriend_phone_one_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="手机号:13888888888"
            android:textColor="@color/text_color_33gray"
            android:textSize="@dimen/text_size_middle_s" />

    </LinearLayout>

    <TextView
        android:id="@+id/textview_addfriend_denied_one_listview"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/backgroud_bg_white_gray_selector"
        android:gravity="center"
        android:text="拒绝"
        android:textColor="@color/text_color_99gray"
        android:textSize="@dimen/text_size_middle_s" />

    <TextView
        android:id="@+id/textview_addfriend_agree_one_Listview"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/backgound_button_blue_shape"
        android:gravity="center"
        android:text="同意"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_middle_s" />
</LinearLayout>
