<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textview_message_detail_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_33gray"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/textview_message_detail_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="04月12日 13：55"
            android:textColor="@color/text_color_99gray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textview_message_detail_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color_33gray"
            android:textSize="@dimen/text_size_middle_s" />
    </LinearLayout>
</LinearLayout>