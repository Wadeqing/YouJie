<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/buttom_bg_shape_red"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageview_iou_data_notarization_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
         />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:padding="3dp"
            android:id="@+id/textview_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="证书类型：电子借条存证文件" />

        <TextView
            android:padding="3dp"
            android:id="@+id/textview_request_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="申请时间：2017/11/11" />

        <TextView
            android:padding="3dp"
            android:id="@+id/textview_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="录音文件：这里是文件名称" />
        <Button
            android:id="@+id/button_lock_detail"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="查看详情"
            android:background="@drawable/backgroud_bg_red_gray_selector"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>